<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Siro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/glh_avatar_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv_avatar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh_avatar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv_avatar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/avatar_me"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@id/glv_avatar_1"
        app:layout_constraintRight_toRightOf="@id/glv_avatar_2"
        app:layout_constraintTop_toTopOf="@id/glh_avatar_1" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="email"
                app:fieldEditable="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_name" />
            <!--private user info-->
            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="age"
                app:fieldEditable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_email" />

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:fieldEditable="true"
                app:filedName="date of birth"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_age" />

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="gender"
                app:fieldEditable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_dob" />

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="height"
                app:fieldEditable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_gender" />

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="weight"
                app:fieldEditable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_height" />

            <vn.intelin.android.app.running.widget.InfoEditText
                android:id="@+id/item_user_info_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:filedName="Phone number"
                app:fieldEditable="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_user_info_weight" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>