<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_user_info"
    android:layout_marginTop="5pt"
    android:paddingTop="2pt"
    android:paddingBottom="2pt"
    android:paddingStart="5pt"
    android:paddingEnd="5pt">
    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="field"
        android:textColor="@color/primaryColor"/>
    <EditText
        android:id="@+id/edt_item_value"
        android:background="@drawable/backgound_edt_item_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:focusable="false"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>