<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">

    <Button
        android:id="@+id/btn_item_lst_event_detail_event"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/green"
        android:text="info"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_lst_event_name_event"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_item_lst_event_id_event" />

    <TextView
        android:id="@+id/txt_item_lst_event_name_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name event"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_lst_event_id_event" />

    <TextView
        android:id="@+id/txt_item_lst_event_id_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eventId"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txt_item_lst_event_name_event"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>