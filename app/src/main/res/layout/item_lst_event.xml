<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_item_lst_event_id_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_item_lst_event_name_event"
        android:text="eventId" />
    <TextView
        android:id="@+id/txt_item_lst_event_name_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_lst_event_id_event"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="name event"/>
    <Button
        android:id="@+id/btn_item_lst_event_detail_event"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/green"
        android:text="info"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="@+id/btn_item_lst_event_enroll"
        app:layout_constraintTop_toTopOf="@+id/txt_item_lst_event_id_event"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_lst_event_name_event"
        />
    <Button
        android:id="@+id/btn_item_lst_event_enroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Enroll"
        android:textColor="@color/white"
        android:background="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_item_lst_event_id_event"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_lst_event_name_event"/>

</androidx.constraintlayout.widget.ConstraintLayout>